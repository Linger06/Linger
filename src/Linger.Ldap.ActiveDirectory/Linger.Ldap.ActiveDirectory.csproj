<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0;net6.0;netstandard2.0;net462;</TargetFrameworks>
        <PackageId>$(MSBuildProjectName)</PackageId>
        <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Authors>Linger</Authors>
        <Description>C# Helper Library</Description>
        <Copyright>Copyright © Linger 2024</Copyright>
        <NeutralLanguage>en-US</NeutralLanguage>
        <VersionPrefix>0.1.2</VersionPrefix>
        <VersionSuffix>alpha</VersionSuffix>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <ItemGroup Condition="'$(TargetFramework)'=='net462'">
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.0" />
        <PackageReference Include="System.DirectoryServices" Version="4.5.0" />
        <PackageReference Include="System.DirectoryServices.AccountManagement" Version="4.5.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)'=='net6.0'">
        <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.2" />
        <PackageReference Include="System.DirectoryServices" Version="8.0.0" />
        <PackageReference Include="System.DirectoryServices.AccountManagement" Version="8.0.1" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0' Or '$(TargetFramework)'=='net8.0' Or '$(TargetFramework)'=='net9.0'">
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.0" />
        <PackageReference Include="System.DirectoryServices" Version="9.0.0" />
        <PackageReference Include="System.DirectoryServices.AccountManagement" Version="9.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Linger.Ldap.Contracts\Linger.Ldap.Contracts.csproj" />
        <ProjectReference Include="..\Linger\Linger.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
