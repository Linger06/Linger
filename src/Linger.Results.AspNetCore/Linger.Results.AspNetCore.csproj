<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0;</TargetFrameworks>
        <Version>0.9.3-preview</Version>        
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>
            ASP.NET Core integration for Linger.Results library, providing extension methods to
            seamlessly convert Result objects to ActionResults with appropriate HTTP status codes.
            Simplifies API response handling with RFC 7807 support and automatic status mapping.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Linger.Results\Linger.Results.csproj" />
  </ItemGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
