<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0;netstandard2.0;</TargetFrameworks>
        <Version>0.7.2</Version>
        <Description>
            Core abstractions and interfaces for Excel manipulation in .NET applications.
            Provides a common API for Excel operations that can be implemented by various
            providers (ClosedXML, NPOI, etc.), with support for data conversion, styling, 
            and template-based generation.
        </Description>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Linger\Linger.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.5" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
      <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    </ItemGroup>

</Project>
