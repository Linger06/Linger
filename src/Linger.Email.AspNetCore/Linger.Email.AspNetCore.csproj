<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0;</TargetFrameworks>
        <PackageId>$(MSBuildProjectName)</PackageId>
        <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Authors>Linger</Authors>
        <Description>C# Helper Library</Description>
        <Copyright>Copyright © Linger 2024</Copyright>
        <NeutralLanguage>en-US</NeutralLanguage>
        <VersionPrefix>0.1.2</VersionPrefix>
        <VersionSuffix>alpha</VersionSuffix>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Linger.Configuration\Linger.Configuration.csproj" />
      <ProjectReference Include="..\Linger.Email\Linger.Email.csproj" />
    </ItemGroup>

</Project>
