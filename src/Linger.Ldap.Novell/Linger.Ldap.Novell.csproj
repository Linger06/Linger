<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0;</TargetFrameworks>
        <Version>0.8.3-preview</Version>        
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>
            Implementation of LDAP client functionality using the Novell.Directory.Ldap provider.
            Provides cross-platform LDAP connectivity with features such as authentication, 
            user information retrieval, group management, and secure connections.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
        <PackageReference Include="Novell.Directory.Ldap.NETStandard" Version="4.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Linger.Ldap.Contracts\Linger.Ldap.Contracts.csproj" />
      <ProjectReference Include="..\Linger\Linger.csproj" />
    </ItemGroup>

</Project>
