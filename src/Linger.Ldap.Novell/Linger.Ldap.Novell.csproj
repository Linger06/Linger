<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0;</TargetFrameworks>
        <Version>0.9.4-preview</Version>        
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>
            Implementation of LDAP client functionality using the Novell.Directory.Ldap provider.
            Provides cross-platform LDAP connectivity with features such as authentication, 
            user information retrieval, group management, and secure connections.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <!-- Stable frameworks using latest stable packages -->
    <ItemGroup Condition="'$(TargetFramework)'=='net8.0' OR '$(TargetFramework)'=='net9.0'">
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.9" />
        <PackageReference Include="Novell.Directory.Ldap.NETStandard" Version="4.0.0" />
    </ItemGroup>

    <!-- .NET 10.0 RC using latest preview packages -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
        <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.0-rc.1.25451.107" />
        <PackageReference Include="Novell.Directory.Ldap.NETStandard" Version="4.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Linger.Ldap.Contracts\Linger.Ldap.Contracts.csproj" />
      <ProjectReference Include="..\Linger\Linger.csproj" />
    </ItemGroup>

</Project>
