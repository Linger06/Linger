<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net8.0;</TargetFrameworks>
        <PackageId>$(MSBuildProjectName)</PackageId>
        <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Authors>Linger</Authors>
        <Description>C# Helper Library</Description>
        <Copyright>Copyright © Linger 2024</Copyright>
        <NeutralLanguage>en-US</NeutralLanguage>
        <VersionPrefix>0.2.0</VersionPrefix>
        <VersionSuffix>alpha</VersionSuffix>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.2" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="9.0.2" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\Linger.Audit\Linger.Audit.csproj" />
      <ProjectReference Include="..\Linger.EFCore\Linger.EFCore.csproj" />
    </ItemGroup>

</Project>
